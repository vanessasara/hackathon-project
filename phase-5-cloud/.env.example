# Database Configuration
DATABASE_URL=postgresql://user:password@host.region.neon.tech/database?sslmode=require

# Authentication (minimum 32 characters)
BETTER_AUTH_SECRET=your-secret-key-minimum-32-characters-long-replace-this

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here
LLM_PROVIDER=openai
OPENAI_DEFAULT_MODEL=gpt-4o-mini

# Cloudflare R2 Storage (Optional - for image uploads)
CLOUDFLARE_R2_ACCOUNT_ID=your-account-id
CLOUDFLARE_R2_ACCESS_KEY_ID=your-access-key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-secret-key
CLOUDFLARE_R2_BUCKET_NAME=your-bucket-name

# Application URLs (automatically configured for Kubernetes)
# BETTER_AUTH_URL=http://frontend-service:3000
# FRONTEND_URL=http://frontend-service:3000
# BACKEND_URL=http://backend-service:8000
